    <PackageReference Include="System.Linq.Dynamic.Core" Version="1.6.7" />
    <PackageReference Include="xunit" Version="2.9.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\KAZABUILD.Application\KAZABUILD.Application.csproj" />
    <ProjectReference Include="..\KAZABUILD.Infrastructure\KAZABUILD.Infrastructure.csproj" />
